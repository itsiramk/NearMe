<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/density_5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/density_8dp"
    app:cardElevation="@dimen/density_8dp"
    app:cardMaxElevation="@dimen/density_10dp"
    android:fillViewport="true"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relDetails">

        <TextView
            android:id="@+id/tvItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/density_10dp"
            android:layout_marginTop="@dimen/density_10dp"
            android:text="@string/app_name"
            android:textColor="@color/colorDarkGrey"
            android:textSize="@dimen/density_18sp"
            android:visibility="gone"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvItemDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvItemName"
            android:lines="2"
            android:maxLines="3"
            android:layout_marginStart="@dimen/density_10dp"
            android:layout_marginTop="@dimen/density_5dp"
            android:visibility="gone"
            android:text="@string/app_name" />

        <TextView
            android:id="@+id/tvError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone"
            android:layout_below="@+id/tvItemDetails"
            android:layout_marginStart="@dimen/density_10dp"
            android:textColor="@color/colorDarkGrey"
            android:textSize="@dimen/density_18sp" />

        <Button
            android:id="@+id/idBtnDismiss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvError"
            android:textColor="@color/white"
            android:background="@color/colorGrey"
            android:layout_margin="@dimen/density_10dp"
            android:text="@string/dismiss_dialog"
            android:textAllCaps="false" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>